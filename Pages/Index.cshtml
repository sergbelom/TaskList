@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

@using WEBTaskListTelerik.Data
@using Kendo.Mvc.UI

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@Html.AntiForgeryToken()

@(Html.Kendo().Grid<TaskViewModel>().Name("grid")
    .Groupable()
    .Sortable()
    .Editable()
    .Scrollable()
    .ToolBar(x => x.Create())
    .Columns(columns =>
    {
        columns.Bound(column => column.TaskName);
        columns.Bound(column => column.Duration);
        columns.Bound(column => column.Date);
        columns.Command(column =>
        {
            column.Edit();
            column.Destroy();
        }).Width(230);
    })
    .DataSource(ds => ds.Ajax()
            .Read(r => r.Url("/Index?handler=Read").Data("forgeryToken"))
            .Update(u => u.Url("/Index?handler=Update").Data("forgeryToken"))
            .Create(c => c.Url("/Index?handler=Create").Data("forgeryToken"))
            .Destroy(d => d.Url("/Index?handler=Destroy").Data("forgeryToken"))
            .Model(m => m.Id(id => id.TaskID))
        .PageSize(10)
    )
    .Pageable()
)

<script>
    function forgeryToken() {
        return kendo.antiForgeryTokens();
    }
</script>